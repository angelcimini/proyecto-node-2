<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            {{!-- "mx-auto" para que esté centrada la targeta --}}
            <div class="card border-primary">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                    {{!-- es necesario especificar el método --}}
                        <div class="form-group">
                        {{!-- "form-group" separa los campos con estilos de bootstrap --}}
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        {{!-- "form-control" carga los estilos de bootstrap --}}
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL">
                            {{!-- especificando type="url" valida que lo que se introduzca sea una url --}}
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="btn-block p-2" rows="3" placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                            {{!-- btn btn-success (botón verde) btn-block (que ocupe todo el ancho de la targeta) --}}
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>